<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
    <!-- setting:控制mybatis全局行为 -->
    <settings>
        <!-- 设置mybatis输出日志 -->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!-- 设置别名 -->
    <typeAliases>
<!--        name:实体类所在的包名-->
        <package name="com.lea.domain"/>
    </typeAliases>

    <!-- sql mapper（sql）映射文件的位置 -->
    <mappers>
<!--        <mapper resource=""/>
        name是包名，这个包中所有mapper.xml一次都能加载
-->
        <package name="com.lea.dao"/>
    </mappers>
</configuration>